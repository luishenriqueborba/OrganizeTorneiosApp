<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MelhorAtaque">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--Cabeçalho-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorDenimBlue"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dp"
                            android:onClick="voltar"
                            app:srcCompat="@drawable/abc_vector_test" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/txtTituloMelhorAtaque"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="-50dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="@string/melhorAtaque"
                                android:textColor="@color/colorWhite"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--Equipes-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGrayCustom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtEquipes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/equipes"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <!--Coluna Nome-->
                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <TextView
                                android:id="@+id/txtCabeçalhoNomeEquipe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Nome"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtEquipe1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 1"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 2"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 3"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 4"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 5"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 6"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 7"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 8"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 9"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 10"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 11"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 12"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 13"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 14"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 15"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtEquipe16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center_horizontal"
                                android:hint="Equipe 16"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <!--Coluna Gols Feitos-->
                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <TextView
                                android:id="@+id/txtCabeçalhoGolsProEquipe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Gols Feitos"
                                android:textColor="@color/colorBlack"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtGolsProEquipe16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:hint="0"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/anuncioBanner3">
            </com.google.android.gms.ads.AdView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</LinearLayout>